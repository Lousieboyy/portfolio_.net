@{
    ViewData["Title"] = "Certificates";
}
<main>
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="container">
        <div class="row">
            @foreach(Certificate item in Model.Certificate){
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow" id="certificate-card">
                        <img src="@item.ImageUrl" class="card-image-certificate" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-name text-center">@item.Name</h5>
                            <p class="card-description text-center mb-5">Received on: @item.Date.ToShortDateString()</p>
                            @if(!string.IsNullOrEmpty(item.Link))
                            {
                                <a href="@item.Link" class="btn btn-nav stick bottom mb-4">View</a>
                            }
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</main>